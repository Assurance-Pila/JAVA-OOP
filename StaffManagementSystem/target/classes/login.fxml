<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.staffmanagementsystem.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Staff Management System - Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <ComboBox fx:id="roleComboBox" promptText="Select Role" />
                <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
                <HBox spacing="10">
                    <Button text="Login" onAction="#handleLogin" />
                    <Button text="Sign Up" onAction="#handleSignUp" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>